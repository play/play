<%
  song = Play::Song.now_playing
  return if !song
%>
<div id="sidebar">
  <div class="now-playing">
    <a href="/artist/<%= song.artist_name %>/album/<%= song.album_name %>" class="album-art">
      <img src="/images/art/<%= song.art_file %>" />
    </a>

    <div class="now-playing-meta">
      <h2 class="title" title="<%= song.title %>"><%= song.title %></h2>
      <p class="album-info">
        <a href="<%= song.escaped_artist_path %>" class="artist"><%= song.artist_name %></a> - <a href="<%= song.escaped_album_path %>"><%= song.album_name %></a>
      </p>
    </div>
    <hr>
    <ul class="now-playing-actions">
      <!-- Todo: add a "is-selected" class to .icon-play-star if the item is starred-->
      <li><a href="#" class="now-playing-action"><span class="now-playing-action-icon icon-play-star"></span> Star Song</a></li>
      <li><a href="#" class="now-playing-action"><span class="now-playing-action-icon icon-cloud-download"></span> Download Song</a></li>
    </ul>
  </div>

  <div class="tune-fans">
    <h3>Tune Fans</h3>
    <div class="fans">
      <ul>
      <% likes=song.likes.each do |like| %>
        <li>
          <a href="/<%= like.user.login %>">
            <img src="http://www.gravatar.com/avatar/<%= like.user.gravatar_id %>?s=50" alt="<%= like.user.login %>" />
          </a>
        </li>
      <% end %>

      <% if likes.empty? %>
        <li>No one likes this. Yet.</li>
      <% end %>
      </ul>
    </div>
  </div>

  <div class="stream-controls">
    <span class="icon-headphones"></span>
  </div>
</div>