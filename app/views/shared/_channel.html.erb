<div class="channel">
  <%= link_to channel_path(channel), :class => 'channel-image' do %>
    <img src="/images/art/<%= channel.now_playing.art_file %>" width="100" height="100" />
  <% end %>

  <div class="details">
    <h2 class="title">
      <%= link_to channel.name, channel_path(channel) %>
    </h2>
    <div class="meta">
      <%= channel.now_playing.artist_name %>
      <% if channel.now_playing.album_name.present? %>
        <span class="betweener">-</span>
        <%= channel.now_playing.album_name %>
      <% end %>
    </div>
  </div>
</div>
