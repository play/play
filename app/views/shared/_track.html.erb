<tr class="track" data-path="<%= track.path %>">
  <td class="number"><%= @songs.index(track) + 1 %>.</td>
  <td class="title"><%= link_to track.title, channel_song_path(@channel.id, track.artist, track) %></td>
  <td class="album"><a href="<%= channel_album_path(@channel.id, track.artist.name, track.album.name) if track.album.name %>" class="album"><%= track.album_name %></a></td>

  <td class="duration"><%= track.duration %></td>
  <td class="download">
    <%= link_to song_download_path(track.path) do %>
      <span class="icon-cloud-download"></span>
    <% end %>
  </td>

  <td class="like"><%= render :partial => 'shared/like', :locals => { :song => track } %></td>
  <td class="queue"><%= render :partial => 'shared/queue', :locals => { :song => track } %></td>
</tr>
