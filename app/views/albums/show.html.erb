<div id="queue">
  <div class="album-details">
    <div class="sidebar">
      <img src="/images/art/<%= @album.art %>" class="album-art">
      <ul>
        <li>Queue Album</li>
        <li><a href="/artists/<%= CGI.escape(@album.artist.name) %>/albums/<%= CGI.escape(@album.name) %>/download">Download Album</a></li>
      </ul>
    </div>
    <div>
      <span class="title"><%= @album.name %></span>
      <span class="artist"><a href="#"><%= @artist.name %></a></span>
        <ul class="listing">
          <span class="track-title">Track Listings</span>
          <% @album.songs.each do |song| %>
            <li>
              <%= link_to song.title, song_path(song.artist, song) %>
              <span class="duration"> <%= song.duration %></span>
            </li>
          <% end %>
        </ul>
    </div>
  </div>
</div>
