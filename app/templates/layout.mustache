<!DOCTYPE html>

<head>

  <meta charset="utf-8">
  <meta name="apple-mobile-web-app-capable" content="yes">

  <link rel="stylesheet" href="/css/reset.css">
  <link rel="stylesheet" href="/css/base.css">
  <link rel="stylesheet" href="/css/jquery.ui.css">
  <link media="only screen and (max-device-width: 480px)" href="/css/iphone.css" type="text/css" rel="stylesheet">
  <link media="only screen and (max-device-width: 768px)" href="/css/tablet.css" type="text/css" rel="stylesheet">
  <link media="only screen and (aspect-ratio: 16/9)" href="/css/tv.css" rel="stylesheet" type="text/css">

  <link href='//fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,400,300,700,600' rel='stylesheet' type='text/css'>
  <link href='//fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>

  <script type="text/javascript" src="/js/application.js"></script>

  <title>Play</title>

</head>

<body>

  <img src="/images/spinner.gif" class="spinner" />

  <input id="fileupload" type="file" name="files[]" multiple style="display: none">

  <section id="top-bar">
    <header class="row">

      <a id="logo">[Play]</a>

      <section id="controls">
        <span id="play">Play</span>
        <span id="pause">Pause</span>
        <span id="next">Next</span>
        <span id="volume-down">Vol -</span>
        <span id="volume-up">Vol +</span>
      </section><!-- /#controls -->

      <span class="user-logged-in">Hello, <a href="/{{login}}">@{{login}}</a></span>

    </header>
  </section>


  <section id="now-playing" class="row">

  </section>


  <section id="queue-results" class="row">

    <header>
      <nav role="queue-history">
        <a class="queue" href="/">Queue</a>
        <a class="history" href="/history">History</a>
      </nav>

      <form class="search" method="get" action="/search" id="search">
        <input type="search" name="q" value="Search" />
      </form>
    </header>

    <section id="songs">
      {{{yield}}}
    </section>

  </section>

  <section id="uploads" class="row">
    <section id="current"></section>

    <div id="progressbar"></div>
  </section>

</body>

</html>
