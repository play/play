$ ->
  $('.controls .add').click ->
    element = $(@)
    path = element.parents('.song').data('path')

    $.post '<%= Play.uri_prefix %>/queue',
      path: path
      (data) ->
        element.text(data)

  $('.controls .remove').click ->
    element = $(@)
    path = element.parents('.song').data('path')

    $.ajax
      type: 'DELETE',
      url:  '<%= Play.uri_prefix %>/queue',
      data: {path: path},
      success: (data) ->
        element.text(data)