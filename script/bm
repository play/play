#!/usr/bin/env ruby
require 'benchmark'
require './config/environment'

Benchmark.bm(21) do |b|
  b.report("Play.default_channel.now_playing") do
    1_000.times { Play.default_channel.now_playing }
  end

  b.report("Song.find") do
    1_000.times { Song.find([:title, 'Stress']) }
  end

  b.report("Artist.all") do
    1_000.times { Artist.all }
  end
end
